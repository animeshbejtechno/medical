<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.medical.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.medical.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddMedicineServlet</servlet-name>
        <servlet-class>com.medical.servlet.AddMedicineServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddMedicineServlet</servlet-name>
        <url-pattern>/AddMedicineServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>AdminLoginServlet</servlet-name>
    <servlet-class>com.medical.servlet.AdminLoginServlet</servlet-class>
</servlet>

    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>com.medical.servlet.PlaceOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <url-pattern>/PlaceOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMedicineServlet</servlet-name>
        <servlet-class>com.medical.servlet.DeleteMedicineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteMedicineServlet</servlet-name>
        <url-pattern>/DeleteMedicineServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>com.medical.servlet.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/AddToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <servlet-class>com.medical.servlet.RemoveFromCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <url-pattern>/RemoveFromCartServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>com.medical.servlet.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/CheckoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateOrderStatusServlet</servlet-name>
        <servlet-class>com.medical.servlet.UpdateOrderStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOrderStatusServlet</servlet-name>
        <url-pattern>/UpdateOrderStatusServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateServiceStatusServlet</servlet-name>
        <servlet-class>com.medical.servlet.UpdateServiceStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServiceStatusServlet</servlet-name>
        <url-pattern>/UpdateServiceStatusServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProcessPaymentServlet</servlet-name>
        <servlet-class>com.medical.servlet.ProcessPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessPaymentServlet</servlet-name>
        <url-pattern>/ProcessPaymentServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookServiceServlet</servlet-name>
        <servlet-class>com.medical.servlet.BookServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServiceServlet</servlet-name>
        <url-pattern>/BookServiceServlet</url-pattern>
    </servlet-mapping>
</web-app>
